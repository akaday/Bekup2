<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.user.hpku.MainActivity">

    <!--<ListView-->
    <!--android:id="@+id/lv_item"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent"-->
    <!--android:divider="@android:color/transparent"-->
    <!--android:cacheColorHint="#fff"-->
    <!--tools:listitem="@layout/lsv_item_phone">-->
    <!--</ListView>-->

    <Button
        android:id="@+id/btnSamsung"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="samsung"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/btnLenovo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="goToPage" />

    <Button
        android:id="@+id/btnLenovo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="lenovo"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/btnApple"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:linksClickable="true"
        android:onClick="goToPage" />

    <Button
        android:id="@+id/btnXiomi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="asus"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/btnSamsung"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="goToPage" />

    <Button
        android:id="@+id/btnApple"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="apple"
        android:onClick="goToPage"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
